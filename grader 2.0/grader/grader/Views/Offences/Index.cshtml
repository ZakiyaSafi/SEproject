@model IEnumerable<grader.Models.ReportQuery>

@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<h2>Offences</h2>
<br />
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    Student ID
                </th>
                <th>
                    Nature
                </th>
                <th>
                    Reason
                </th>
                <th>
                   Valid
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.studentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reportQueryNature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reportQueryReason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reportQueryValid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.reportQueryID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.reportQueryID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.reportQueryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

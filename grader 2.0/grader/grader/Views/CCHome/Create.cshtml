@model grader.Models.Course

@{
    ViewData["Title"] = "Create";
}
<br />
<br />
<h2>Create New Course</h2>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Course Name</label>
                <input asp-for="courseName" class="form-control" />
                <span asp-validation-for="courseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Course Code</label>
                <input asp-for="courseCode" class="form-control" />
                <span asp-validation-for="courseCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Course Coordinator ID</label>
                <input asp-for="courseCoordinatorID" class="form-control" />
                <span asp-validation-for="courseCoordinatorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">School Administrator ID</label>
                <input asp-for="schoolAdministratorID" class="form-control" />
                <span asp-validation-for="schoolAdministratorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

